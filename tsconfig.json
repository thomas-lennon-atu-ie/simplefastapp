{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowArbitraryExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-native",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "../screens/*": [
        "src/screens/*"
      ],
      "@firebase/auth": [
        "./node_modules/@firebase/auth/dist/index.rn.d.ts"
      ]
    },
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/components/*",
    "src/screens/*",
    "src/navigation/*",
    "src/context/*",
    "src/services/*",
    "src/types/*",
    "index.ts",
    "App.tsx",
    "env.d.ts",
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.cjs",
    "__mocks__/*",
    "src/__tests__/*",
    "teardownGlobalJest.js",
    "setupGlobalJest.js",
    "setupBeforeEnv.js",
    "jest**",
    "android/**",
    "build/**",
    "dist/**",
  ],
  "extends": "expo/tsconfig.base"
}
